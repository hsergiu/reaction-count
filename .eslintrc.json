{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["error", "ignorePackages", {
          "js": "always"
        }],
        "import/prefer-default-export": "off",
        "new-cap": "off",
        "no-console": "off",
        "default-param-last": "off"
    }
}
